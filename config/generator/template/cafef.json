{
    "engine": "request-crawler",
    "pipeline": [
        {
            "name": "foreach",
            "params": {
                "start": 1,
                "limit": 2,
                "delay": 1,
                "cond": {
                    "action": "get",
                    "validate": "len(result)==0"
                },
                "actions": [
                    {
                        "name": "get",
                        "params": {
                            "url": "https://cafef.vn/du-lieu/Ajax/PageNew/DataHistory/PriceHistory.ashx",
                            "params": {
                                "Symbol":"HPG",
                                "StartDate":"01/01/2024",
                                "EndDate":"01/01/2025",
                                "PageIndex": "$item",
                                "PageSize":20
                            },
                            "format": "json"
                        }
                    },
                    {
                        "name": "save",
                        "params": {
                            "type": "memory",
                            "name": "price"
                        }
                    },
                    {
                        "name": "get",
                        "params": {
                            "url": "https://cafef.vn/du-lieu/Ajax/PageNew/DataHistory/ThongKeDL.ashx",
                            "params": {
                                "Symbol":"HPG",
                                "StartDate":"01/01/2024",
                                "EndDate":"01/01/2025",
                                "PageIndex": "$item",
                                "PageSize":20
                            },
                            "format": "json"
                        }
                    },
                    {
                        "name": "save",
                        "params": {
                            "type": "memory",
                            "name": "statistic"
                        }
                    },
                    {
                        "name": "get",
                        "params": {
                            "url": "https://cafef.vn/du-lieu/Ajax/PageNew/DataHistory/GDKhoiNgoai.ashx",
                            "params": {
                                "Symbol":"HPG",
                                "StartDate":"01/01/2024",
                                "EndDate":"01/01/2025",
                                "PageIndex": "$item",
                                "PageSize":20
                            },
                            "format": "json"
                        }
                    },
                    {
                        "name": "save",
                        "params": {
                            "type": "memory",
                            "name": "khoingoai"
                        }
                    },
                    {
                        "name": "get",
                        "params": {
                            "url": "https://cafef.vn/du-lieu/Ajax/PageNew/DataHistory/GDTuDoanh.ashx",
                            "params": {
                                "Symbol":"HPG",
                                "StartDate":"01/01/2024",
                                "EndDate":"01/01/2025",
                                "PageIndex": "$item",
                                "PageSize":20
                            },
                            "format": "json"
                        }
                    },
                    {
                        "name": "save",
                        "params": {
                            "type": "memory",
                            "name": "tudoanh"
                        }
                    },
                    {
                        "name": "transform",
                        "params": {
                            "path": "./transform/join.py"
                        }
                    },
                    {
                        "name": "save",
                        "params": {
                            "type": "file",
                            "write_mode": "w",
                            "file_name": "HPG_YYYMMDD.json",
                            "pattern": "YYYMMDD",
                            "pattern_val": "#get_time_now@%Y%m%d%H%M%S"
                        }
                    },
                    {
                        "name": "get",
                        "params": {
                            "url": "https://cafef.vn/du-lieu//Ajax/Events_RelatedNews_New.aspx",
                            "params": {
                                "symbol":"HPG",
                                "floorID":"0",
                                "configID":"0",
                                "PageIndex": "1",
                                "PageSize":30,
                                "Type": "2"
                            }
                        }
                    },
                    {
                        "name": "save",
                        "params": {
                            "type": "file",
                            "write_mode": "w",
                            "file_name": "HPG_News_YYYMMDD.json",
                            "pattern": "YYYMMDD",
                            "pattern_val": "#get_time_now@%Y%m%d%H%M%S"
                        }
                    }
                ]
            }
        }
    ]
}